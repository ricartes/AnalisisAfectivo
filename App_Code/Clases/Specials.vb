    Public Shared Function EliminaAcento(ByVal c As Char) As Char
        Dim res As Char = c

        Select Case c
            Case "á"c, "à"c, "ä"c
                res = "a"c
            Case "é"c, "è"c, "ë"c
                res = "e"c
            Case "í"c, "ì"c, "ï"c
                res = "i"c
            Case "ó"c, "ò"c, "ö"c
                res = "o"c
            Case "ú"c, "ù"c, "ü"c
                res = "u"c
        End Select

        Return res
    End Function


